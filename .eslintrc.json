{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            { "singleQuote": true, "trailingComma": "all" }
        ],
        "quotes": [2, "single"],
        "no-underscore-dangle": ["error", { "allow": ["_source"] }]
    }
}
